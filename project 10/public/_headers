# Security headers for all pages
/*
  # Force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Referrer policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://bolt.new; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.stripe.com https://*.supabase.co https://translation.googleapis.com; frame-src https://js.stripe.com https://hooks.stripe.com;

# Specific MIME types for JavaScript files
/_expo/static/js/*
  Content-Type: application/javascript

# Specific MIME types for CSS files
/_expo/static/css/*
  Content-Type: text/css

# Specific MIME types for assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Specific MIME types for images
*.png
  Content-Type: image/png
  Cache-Control: public, max-age=31536000

*.jpg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000

*.jpeg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000

*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=31536000

*.ico
  Content-Type: image/x-icon
  Cache-Control: public, max-age=31536000

# JSON files
*.json
  Content-Type: application/json

# Font files
*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000

*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000

*.ttf
  Content-Type: font/ttf
  Cache-Control: public, max-age=31536000

*.otf
  Content-Type: font/otf
  Cache-Control: public, max-age=31536000